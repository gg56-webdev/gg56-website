---
type Props = { title: string };

const { title } = Astro.props;
---

<section
  aria-labelledby="hero-heading"
  id="hero"
  class="bg-primary text-primary-content py-12 md:py-24"
>
  <h1
    id="hero-heading"
    class="text-center text-2xl font-bold sm:text-3xl md:text-4xl"
  >
    {title}
  </h1>
</section>

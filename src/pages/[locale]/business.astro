---
import Layout from "@/layouts/Layout.astro";
import * as translations from "@/i18n";
import { getLocaleParams } from "@/utils";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

import appImg from "@images/it/app.webp";
import botImg from "@images/it/bot.webp";
import passngoImg from "@images/it/passngo.png";
import DefaultHero from "@/components/DefaultHero.astro";

export function getStaticPaths() {
  return getLocaleParams();
}

const locale = Astro.currentLocale!;
const t = translations[locale as keyof typeof translations] || translations.en;

const ggexScreenshots = Object.values(
  import.meta.glob<ImageMetadata>("@/assets/images/exchange/*/ggex-*", {
    eager: true,
    import: "default",
  }),
).filter((src) => src.src.includes(`/${locale}/`));
---

<Layout title={t.business.h1}>

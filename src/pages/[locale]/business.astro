      <div class="prose md:prose-lg mx-auto max-w-(--breakpoint-md) px-4">
        <h2 id="fintech-heading">{t.business.fintech.h2}</h2>
        <section id="pg-service" aria-labelledby="pg-service-heading">
          <h3 id="pg-service-heading">
            {locale === "ko" ? "PG 서비스" : "PG Service"}
          </h3>
          <p
            class="rounded-box border-primary border p-2 before:content-['※_']"
          >
            <dfn id="pg-dfn"><abbr>PG</abbr></dfn> : Payment Gateway
          </p>

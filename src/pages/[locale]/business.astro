---
import Layout from "@/layouts/Layout.astro";
import * as translations from "@/i18n";
import { getLocaleParams } from "@/utils";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

import appImg from "@images/it/app.webp";
import botImg from "@images/it/bot.webp";
import passngoImg from "@images/it/passngo.png";
import DefaultHero from "@/components/DefaultHero.astro";

export function getStaticPaths() {
  return getLocaleParams();
}

const locale = Astro.currentLocale!;
const t = translations[locale as keyof typeof translations] || translations.en;

const ggexScreenshots = Object.values(
  import.meta.glob<ImageMetadata>("@/assets/images/exchange/*/ggex-*", {
    eager: true,
    import: "default",
  }),
).filter((src) => src.src.includes(`/${locale}/`));
---

<Layout title={t.business.h1}>
  <DefaultHero title={t.business.h1} />
  <div class="grid gap-12 py-12 md:gap-24 md:py-24 lg:gap-36">
    <section id="ggbank" aria-labelledby="ggbank-heading">
      <div class="prose md:prose-lg mx-auto max-w-(--breakpoint-lg) px-4">
        <h2 id="ggbank-heading">{t.business.ggbank.h2}</h2>
        <ul class="marker:text-primary">
          <li>
            <strong
              >{
                locale === "ko"
                  ? "세계 최초로 암호화폐 거래소와 디지털뱅크간 혁신적 통합플랫폼으로 구현하는 “First Mover”"
                  : "As a First Mover, we are building the world’s first innovative platform that seamlessly connects cryptocurrency exchanges with digital banking"
              }</strong
            >
            <ul>
              <li>
                {
                  locale === "ko"
                    ? "은행업과 디지털 자산 관리를 단일 플랫폼으로 결합"
                    : "Integrating banking and digital asset management within one unified platform"
                }
              </li>
              <li>
                {
                  locale === "ko"
                    ? "고객의 편의성과 편익성을 극대화하는 혁신적인 금융서비스"
                    : "Innovative financial services that maximize customer convenience and benefits"
                }
              </li>
              <li>
                {
                  locale === "ko"
                    ? "형태 : 디지탈 오프쇼어 뱅크"
                    : "Type: Digital Offshore Bank"
                }
                <br />
                <small class="ps-6 before:content-['*_']">
                  {
                    locale === "ko"
                      ? "낮은 세율이 적용되는 국가에 설립, 국제 은행 라이선스 하에 운영 및 규제"
                      : "Established in a country with low tax rates, operated and regulated under international banking license"
                  }
                </small>
              </li>
              <li>
                {
                  locale === "ko"
                    ? "본사 : 말레이시아 라부안"
                    : "Headquarters: Labuan, Malaysia"
                }
                <br />
                <small class="ps-6 before:content-['*_']">
                  {
                    locale === "ko"
                      ? "Tax heaven 지역 이점, 자산보호 (이슬람금융의 익명성 보장), 규제 유연성"
                      : "Tax haven region advantages, asset protection (anonymity guarantee in Islamic finance), regulatory flexibility"
                  }
